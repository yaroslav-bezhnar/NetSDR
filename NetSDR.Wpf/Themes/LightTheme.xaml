<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="BackgroundColor">#FAFAFA</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundColor" Color="#222222" />
    <SolidColorBrush x:Key="ButtonColor">#4CAF50</SolidColorBrush>
    <SolidColorBrush x:Key="StatusMessageColor" Color="DarkGreen" />
    <SolidColorBrush x:Key="ErrorMessageColor" Color="Red" />
    <SolidColorBrush x:Key="FlatTextBoxBackground">#F5F5F5</SolidColorBrush>
    <SolidColorBrush x:Key="FlatTextBoxBorder">#CCCCCC</SolidColorBrush>
    <SolidColorBrush x:Key="FlatTextBoxDisabledBackground">#EEEEEE</SolidColorBrush>
    <SolidColorBrush x:Key="FlatTextBoxDisabledBorder">#BBBBBB</SolidColorBrush>
</ResourceDictionary>